@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Http
@inject IStringLocalizer<SharedResource> StringLocalizer

@{
    var username = Context.Request.Cookies["username"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamingPlatform6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamingPlatform6.styles.css" asp-append-version="true" />

    <style>
        /* Style personnalisé pour le bouton Déconnecter */
        .logout-btn {
            color: white;
            background-color: red; /* Fond rouge */
            border: none;
            padding: 8px 16px;
            cursor: pointer;
            font-size: 14px;
            margin-left: auto; /* Pour le pousser vers la droite */
            display: inline-block;
        }

            .logout-btn:hover {
                background-color: darkred; /* Couleur rouge foncé au survol */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GamingPlatform6</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChangeLanguage">ChangeLanguage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AddUser">AddUser</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="AddGame">AddGame</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Score" asp-action="AddScore">AddScore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Score" asp-action="ListScores">ListScores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="LogAction">LogAction</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Lobby" asp-action="CreateLobby">CreateLobby</a>
                        </li>

                        @if (username != null)
                        {
                            <li>@StringLocalizer["ConnectedAs"], @username</li> <!-- Affichage du nom d'utilisateur -->
                            <li>
                                <form method="post" asp-controller="User" asp-action="Logout" style="display:inline;">
                                    <button type="submit" class="logout-btn">
                                        @StringLocalizer["Logout"]
                                    </button>
                                </form>
                            </li>
                        }
                        @* else
                        {
                            <li><a href="/User/AddUser">@StringLocalizer["PleaseAddUser"]</a></li>
                        } *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
