@page
@model GamingPlatform6.Models.Game

<!DOCTYPE html>
<html>
<head>
    <title>Ajouter un Jeu</title>
</head>
<body>
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh; flex-direction: column;">
        <h2>Ajouter un jeu</h2>
        <form method="post" asp-action="AddGame" asp-controller="Game">
            <div style="margin: 10px 0;">
                <label for="gamename">Nom du jeu :</label><br>
                <input type="text" id="gamename" name="Gamename" style="padding: 8px; width: 300px;" required />
            </div>
            <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">
                Ajouter
            </button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color: red; margin-top: 20px;">@ViewBag.ErrorMessage</p>
        }
    </div>
</body>
</html>
