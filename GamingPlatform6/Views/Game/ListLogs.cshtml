@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> StringLocalizer

@model IEnumerable<GamingPlatform6.Models.ActionLog>

@{
    ViewData["Title"] = @StringLocalizer["ListLogs"];
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column; height: 100vh; padding: 20px;">
        
        <!-- Titre au-dessus du tableau -->
        <h2 style="text-align: center; margin-bottom: 20px;">@StringLocalizer["ListLogs"]</h2>

        <!-- Table des scores -->
        <div style="width: 80%; margin-top: 20px;">
            <table border="1" style="width: 100%; text-align: center;">
                <thead>
                    <tr>
                        @* <th>Jeu</th> *@
                        <th>@StringLocalizer["User"]</th>
                        <th>@StringLocalizer["Action"]</th>
                        <th>@StringLocalizer["Description"]</th>
                        <th>@StringLocalizer["Date"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var score in Model)
                        {
                            <tr>
                                @* <td>@score.GameId</td> *@
                                <td>@score.UserId</td>
                                <td>@score.Action</td>
                                <td>@score.Description</td>
                                <td>@score.LoggedAt</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">@StringLocalizer["NoAvailableLogs"].</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
